***
开发者：

shengbanx

Colachan

</div>


<div id="preview" class="side-w preview">
</div>

<script src="/javascripts/ace/ace.js" type="text/javascript" charset="utf-8"></script>
<script>
    
    
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/ntranslate");
    editor.setShowPrintMargin(false);
    document.getElementById('editor').style.fontSize='0.9em';
    document.getElementById('editor').style.lineHeight='1.5em';
    editor.getSession().setUseWrapMode(true);
    
    
    var refreshPreview = function(){
    document.getElementById('preview').innerHTML = marked(editor.getValue());
}

refreshPreview();

editor.on('change', function(e){
    refreshPreview();
});


    
</script>

  </body>
</html>
